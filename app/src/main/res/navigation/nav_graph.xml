<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.example.kitsugit.ui.fragments.anime.AnimeFragment"
        android:label="fragment_anime"
        tools:layout="@layout/fragment_anime" >
    </fragment>

    <fragment
        android:id="@+id/mangaFragment"
        android:name="com.example.kitsugit.ui.fragments.manga.MangaFragment"
        android:label="fragment_manga"
        tools:layout="@layout/fragment_manga" >
    </fragment>

    <fragment
        android:id="@+id/detailAnimeFragment"
        android:name="com.example.kitsugit.ui.fragments.anime.detail.DetailAnimeFragment"
        android:label="fragment_detail_anime"
        tools:layout="@layout/fragment_detail_anime" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detailMangaFragment"
        android:name="com.example.kitsugit.ui.fragments.manga.detail.DetailMangaFragment"
        android:label="fragment_detail_manga"
        tools:layout="@layout/fragment_detail_manga" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kitsugit.ui.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailMangaFragment"
            app:destination="@id/detailMangaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailAnimeFragment"
            app:destination="@id/detailAnimeFragment" />
    </fragment>

</navigation>