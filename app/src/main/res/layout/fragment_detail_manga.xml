<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#472832"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.manga.detail.DetailMangaFragment">

    <ImageView
        android:id="@+id/img_kitsu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_kitsu"
        app:layout_constraintStart_toStartOf="@id/img_kitsu"
        app:layout_constraintTop_toBottomOf="@id/img_kitsu"
        tools:text="Rick Sanchez" />

</androidx.constraintlayout.widget.ConstraintLayout>